<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tercyduk.appngasal.Activity.KonfirmasiTopup">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Nama Sesuai Bank"
                android:textColor="@color/primarytext"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Permata"
                android:textSize="12sp"
                android:id="@+id/nameUsertop"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="180dp"
                android:textColor="@color/primarytext"
                android:layout_height="wrap_content"
                android:text="Transfer dari Bank"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Namabank"
                android:textSize="12sp"
                android:id="@+id/nameBanktop"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Tanggal Transfers"
                android:textColor="@color/primarytext"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DD-MM-YYYY"
                android:textSize="12sp"
                android:id="@+id/edttopups"/>

        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
