<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tercyduk.appngasal.Activity.EditProfile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/edp.photo.profil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:siBorderColor="#fffbbe"
                    app:siBorderWidth="2dp" />
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="-30dp"
                    android:layout_height="30dp">

                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/edp.upload.image.profil"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/camera"
                        app:siBorderColor="#fff"
                        app:siBorderWidth="2dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@+id/inputCont"
            android:layout_width="match_parent"
            android:layout_marginTop="200dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edp.name.container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            style="@style/LoginSingup"
                            android:layout_marginTop="20dp"
                            android:hint="Name"
                            android:inputType="textPersonName"
                            android:id="@+id/edp.txt.name"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edp.alamat.container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            style="@style/LoginSingup"
                            android:hint="Alamat"
                            android:id="@+id/edp.txt.alamat"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edp.hp.container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            style="@style/LoginSingup"
                            android:hint="Handphone"
                            android:inputType="phone"
                            android:id="@+id/edp.txt.hp"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>



        <Button
            android:id="@+id/btnCreateAccount"
            style="@style/ButtonOrange"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/inputCont"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</FrameLayout>
